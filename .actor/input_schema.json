{
    "title": "Firecrawl Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "firecrawlApiKey": {
            "title": "Firecrawl API Key",
            "type": "string",
            "description": "Your Firecrawl API key (get one at https://www.firecrawl.dev)",
            "editor": "textfield",
            "isSecret": true
        },
        "articles": {
            "title": "Articles to Scrape",
            "type": "array",
            "description": "List of articles to scrape",
            "editor": "json",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Article title"
                    },
                    "link": {
                        "type": "string",
                        "description": "Article URL"
                    },
                    "pubDate": {
                        "type": "string",
                        "description": "Publication date"
                    },
                    "guid": {
                        "type": "string",
                        "description": "Unique identifier"
                    }
                }
            }
        }
    },
    "required": ["firecrawlApiKey", "articles"]
}
